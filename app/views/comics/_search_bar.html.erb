<nav class="fixed top-0 left-0 w-full h-auto z-50 bg-red-100 bg-opacity-95">
  <div class="container mx-auto h-48 px-6 py-3 flex flex-col justify-center align-middle items-center space-y-8">
    <%= image_tag "marvel_logo.png", alt: "Marvel Logo", size: "150x50" %>

    <div class="flex items-center">
      <%= form_with url: comics_path(page: 1), method: :get, remote: true do |f| %>
        <%= f.hidden_field :page, value: 1 %>

        <input 
          class="
            h-10 px-5 pr-16 
            border-2 border-gray-300 
            bg-white shadow-xl shadow-red-50 rounded 
            text-sm focus:outline-none
          "
          type="search" 
          name="search_term" 
          placeholder="Search..."
          value=<%= params[:search_term]%>
        >
      <% end %>
    </div>
  </div>
</nav>