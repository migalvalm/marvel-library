<div 
  class="
    group relative 
    hover:border-b-8 hover:border-red focus:border-8
    active:border-8 active:border-red
  "
>
  <img 
    src="<%= comic.cover %>" 
    class="
      w-full h-auto 
      transition duration-500 ease-in-out opacity-100 
      group-hover:opacity-25
    "
  >
  <div class="
    bg-white opacity-0 
      absolute w-full bottom-0 left-0 
      group-hover:opacity-100 group-hover:transition-opacity
    "
  >
    <h2 class="text-center font-bold uppercase p-4"><%= comic.title %></h2>
  </div>
</div>
 